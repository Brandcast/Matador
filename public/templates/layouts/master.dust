<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="An API for Tibia.com">
    <meta name="author" content="Shane King">
    <title>{+title /}</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/master.css"/>
    <link href="/css/font-awesome.css" rel="stylesheet">
    <link rel="shortcut icon" href="/img/favicon.ico" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Matador</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li {?overview}class="active"{/overview}><a href="/">Overview<span data-bind="visible: stuck() != null && stuck() !== ' (0)', text: stuck" style="color: red"></span></a></li>
                <li {?complete}class="active"{/complete}><a href="/complete">Complete<span data-bind="visible: complete() != null, text: complete"></span></a></li>
                <li {?failed}class="active"{/failed}><a href="/failed">Failed<span data-bind="visible: failed() != null, text: failed"></span></a></li>
                <li {?active}class="active"{/active}><a href="/active">Active<span data-bind="visible: active() != null, text: active"></span></a></li>
                <li {?pending}class="active"{/pending}><a href="/pending">Pending<span data-bind="visible: pending() != null, text: pending"></span></a></li>
            </ul>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li><h3>Matador</h3></li>
                <li {?overview}class="active"{/overview}><a href="/">Overview<span data-bind="visible: stuck() != null && stuck() !== ' (0)', text: stuck" style="color: red"></span></a></li>
                <li {?complete}class="active"{/complete}><a href="/complete">Complete<span data-bind="visible: complete() != null, text: complete"></span></a></li>
                <li {?failed}class="active"{/failed}><a href="/failed">Failed<span data-bind="visible: failed() != null, text: failed"></span></a></li>
                <li {?active}class="active"{/active}><a href="/active">Active<span data-bind="visible: active() != null, text: active"></span></a></li>
                <li {?pending}class="active"{/pending}><a href="/pending">Pending<span data-bind="visible: pending() != null, text: pending"></span></a></li>
            </ul>
        </div>

        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        {+body /}
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
<script src="/js/knockout.min.js"></script>
<script src="/js/jquery.blockUI.js"></script>
<script src="/js/jquery.noty.packaged.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/holder.js"></script>
<script src="/js/app.js"></script>

<script type="text/javascript">
    var keys = ko.observableArray([]);
    {#keys}
    keys.push({id: "{id}", type: "{type}", status: "{status}"});
    {/keys}
    var DataModel = {
        complete: ko.observable({?counts}" ("+{counts.complete}+")"{:else}null{/counts}),
        failed: ko.observable({?counts}" ("+{counts.failed}+")"{:else}null{/counts}),
        active: ko.observable({?counts}" ("+{counts.active}+")"{:else}null{/counts}),
        pending: ko.observable({?counts}" ("+{counts.pending}+")"{:else}null{/counts}),
        stuck: ko.observable({?counts}" ("+{counts.stuck}+")"{:else}null{/counts}),
        keys: keys,
        autoRefresh: ko.observable(true),
        autoRefreshId: null,
        refreshViewModel: function(force){
            var refresh = function(){
                if(DataModel.autoRefresh()){
                    $.ajax().done(function(data){
                        DataModel.complete(" ("+data.counts.complete+")");
                        DataModel.failed(" ("+data.counts.failed+")");
                        DataModel.active(" ("+data.counts.active+")");
                        DataModel.pending(" ("+data.counts.pending+")");
                        DataModel.stuck(" ("+data.counts.stuck+")");
                        DataModel.keys(data.keys);
                    });
                }
            };
            if(force){
                clearInterval(DataModel.autoRefreshId);
                refresh();
                DataModel.autoRefreshId = setInterval(refresh, 2000);
            }else{
                DataModel.autoRefreshId = setInterval(refresh, 2000);
            }
        }
    };

    $(document).on('ready', function(){
        ko.applyBindings(DataModel);
        DataModel.refreshViewModel();
    });
</script>

</body>
</html>
